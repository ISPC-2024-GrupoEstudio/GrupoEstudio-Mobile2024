<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sección Superior con Logo y Banner -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/gradient"
            android:layout_marginTop="52dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <!-- Banner Image -->
            <ImageView
                android:id="@+id/imageView_banner"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_below="@id/imageView_logo"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="Banner"
                android:src="@drawable/banner_home" />


        </RelativeLayout>


        <!-- Sección de Servicios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servicios:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="20dp" />

            <!-- Grid de Servicios usando FlexboxLayout -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexbox_servicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="space_around"
                app:alignItems="stretch">

                <!-- Los cards se agregarán dinámicamente desde Java -->

            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

        <!-- Sección de Ubicación y Contacto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación y Contacto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="16dp" />

            <!-- Mapa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <WebView
                    android:id="@+id/webview_map"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </androidx.cardview.widget.CardView>

            <!-- Información de Contacto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_sporte"
                    android:contentDescription="Soporte"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soporte Técnico"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/textView_email_soporte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="soporte@petboutique.com"
                        android:textSize="14sp"
                        android:textColor="@color/violeta_perfil_iconos"
                        android:fontFamily="@font/poppins_regular"
                        android:autoLink="email" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>