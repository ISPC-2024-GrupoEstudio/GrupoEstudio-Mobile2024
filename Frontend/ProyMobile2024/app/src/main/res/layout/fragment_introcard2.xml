<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".IntroCard2Fragment">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="24dp"
        app:flexDirection="column"
        app:alignItems="center">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:flexDirection="column">

            <!-- Título Nuestra Historia (izquierda) -->
            <TextView
                android:id="@+id/title_historia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuestra Historia"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:paddingBottom="5dp"
                android:textAlignment="textStart"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Descripción Historia -->
            <TextView
                android:id="@+id/description_historia"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Desde su fundación en 2020, Pet Boutique ha recorrido un emocionante viaje, empezando como una pequeña tienda online y creciendo hasta convertirse en una plataforma confiable para miles de dueños de mascotas en todo el país."
                android:textSize="14sp"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="textStart"
                android:lineSpacingExtra="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_historia" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:flexDirection="row_reverse"
            android:layout_marginTop="30dp">


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                android:layout_marginTop="50dp"
                android:layout_marginStart="7dp">

                <!-- Título Nuestros Valores (derecha) -->
                <TextView
                    android:id="@+id/title_valores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nuestros Valores"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/title_historia" />

                <!-- Descripción Valores -->
                <TextView
                    android:id="@+id/description_valores"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Nos enorgullecemos de trabajar bajo los siguientes valores: Calidad, Confianza y Compromiso."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="textStart"
                    android:lineSpacingExtra="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_valores" />
            </com.google.android.flexbox.FlexboxLayout>

            <FrameLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <!-- Mancha celeste de fondo -->
                <ImageView
                    android:id="@+id/background_blob_blue"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:src="@drawable/mancha_celeste"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Imagen de gatos (parte superior) -->
                <ImageView
                    android:id="@+id/cats_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/gatos_carddos"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagen de gatos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </FrameLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <!-- Botón Continuar -->
        <Button
            android:id="@+id/button_continue2"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/botonnuevo"
            android:text="Continuar"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:elevation="4dp"
            android:layout_marginTop="50dp"/>

        <!-- Texto de login -->
        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Tenés una cuenta? Inicia Sesión !"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:layout_marginTop="5dp" />

    </com.google.android.flexbox.FlexboxLayout>
</ScrollView>
