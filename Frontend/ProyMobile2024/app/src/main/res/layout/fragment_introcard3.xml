<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".IntroCard3Fragment">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:flexDirection="column"
        app:alignItems="center">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                app:justifyContent="center"
                tools:ignore="MissingConstraints">

                <!-- Título principal Beneficios -->
                <TextView
                    android:id="@+id/title_beneficios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beneficios para el Cliente"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textAlignment="center"/>

                <!-- Descripción Beneficios -->
                <TextView
                    android:id="@+id/description_beneficios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="En Pet Boutique te ofrecemos una experiencia cómoda y única, con envío rápido, productos garantizados y atención personalizada."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="center"
                    android:lineSpacingExtra="1dp" />
            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>
        
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/contenedor_mision"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:flexDirection="row"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="350dp"
                android:layout_height="200dp"
                app:flexDirection="column">
                <!-- Título Misión (izquierda) -->
                <TextView
                    android:id="@+id/title_mision"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Misión"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textAlignment="textStart" />

                <!-- Descripción Misión -->
                <TextView
                    android:id="@+id/description_mision"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="En Pet Boutique, nuestro objetivo es asegurar la felicidad y el bienestar de tu mascota con productos de calidad y servicios confiables."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_regular"
                    android:textAlignment="textStart"
                    android:lineSpacingExtra="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_mision" />
            </com.google.android.flexbox.FlexboxLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <!-- Mancha verde de fondo -->
                <ImageView
                    android:id="@+id/background_blob_green"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:paddingTop="40dp"
                    android:src="@drawable/mancha_verdeagua"
                    android:scaleType="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hombre_perro"/>

            </FrameLayout>

        </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="230dp"
                        android:src="@drawable/mancha_verde2"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="-20dp"/>

                    <ImageView
                        android:id="@+id/main_image"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/mujer_gato"
                        android:contentDescription="Imagen principal"/>


                </FrameLayout>


                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="column">

                    <!-- Título Visión (derecha inferior) -->
                    <TextView
                        android:id="@+id/title_vision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visión"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textAlignment="textEnd"
                        app:layout_constraintTop_toBottomOf="@+id/main_image" />

                    <!-- Descripción Visión -->
                    <TextView
                        android:id="@+id/description_vision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ser la tienda líder en productos para mascotas, brindando soluciones que fomenten su salud, cuidado y felicidad junto a sus dueños."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_regular"
                        android:textAlignment="textEnd"
                        android:lineSpacingExtra="3dp"
                        app:layout_constraintTop_toBottomOf="@+id/title_vision" />
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>

        <!-- Botón Comenzar -->
        <Button
            android:id="@+id/button_start"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:background="@drawable/botonnuevo"
            android:text="Comenzar"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:elevation="4dp"
            android:layout_marginTop="5dp"/>

        <!-- Texto de login -->
        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Tenés una cuenta? Inicia Sesión !"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

    </com.google.android.flexbox.FlexboxLayout>
</ScrollView>